<Window x:Class="WireManager.Views.BoolChoiseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WireManager.Views"
        mc:Ignorable="d"
        Title="WireGuardManager" Height="125" Width="250" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Label x:Name="HelpLabel" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Width="230" Margin="0,5,0,0"/>
        <Button Content=" Yes " HorizontalAlignment="Left" Margin="10,20,10,20" VerticalAlignment="Bottom" Width="50" Click="Yes_Click"/>
        <Button Content=" No " HorizontalAlignment="Right" Margin="10,20,10,20" VerticalAlignment="Bottom" Width="50" Click="No_Click"/>
    </Grid>
</Window>
