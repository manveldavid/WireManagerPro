<Window x:Class="WireManager.Views.ListBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WireManager.Views"
        mc:Ignorable="d"
        Title="WireGuardManager" Height="360" Width="250" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <ListBox x:Name="MainListBox" VerticalAlignment="Top" HorizontalAlignment="Center" Height="270" Width="200" Margin="0,10,0,0" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Content="Apply" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="200" Click="Apply_Click"/>
    </Grid>
</Window>
